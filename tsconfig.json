{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
  
      "strict": true,
      "noImplicitOverride": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
  
      "types": ["chrome"],
      "resolveJsonModule": true,
      "skipLibCheck": true,
  
      "sourceMap": true,
      "useDefineForClassFields": true,
      "noEmit": true
    },
    "include": ["src", "manifest.config.ts", "vite.config.ts"]
  }
  